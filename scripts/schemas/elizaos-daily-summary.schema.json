{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://elizaos.github.io/knowledge/scripts/schemas/elizaos-daily-summary.schema.json",
  "title": "ElizaOS Daily Summary",
  "description": "Daily aggregated summary of ElizaOS ecosystem activity. Fields use plural key names with scalar (single item) or array (multiple items) values. Empty fields are omitted.",
  "type": "object",
  "required": ["type", "title", "categories"],
  "properties": {
    "type": {
      "type": "string",
      "const": "elizaosDailySummary"
    },
    "title": {
      "type": "string",
      "description": "Human-readable title, e.g., 'Daily Report - 2026-01-06'"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "ISO date (YYYY-MM-DD)"
    },
    "poster": {
      "type": "string",
      "format": "uri",
      "description": "Overall poster image URL"
    },
    "icon_sheet": {
      "type": "string",
      "format": "uri",
      "description": "Combined icon sheet URL"
    },
    "categories": {
      "type": "array",
      "description": "Content categories for the day",
      "items": {
        "$ref": "#/definitions/category"
      }
    },
    "_metadata": {
      "type": "object",
      "description": "Processing metadata",
      "properties": {
        "generated_at": { "type": "string", "format": "date-time" },
        "source": { "type": "string" },
        "version": { "type": "string" }
      }
    }
  },
  "definitions": {
    "category": {
      "type": "object",
      "required": ["title", "content"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Category title"
        },
        "topic": {
          "type": "string",
          "description": "Normalized topic for poster mapping",
          "enum": [
            "discord",
            "github",
            "twitter",
            "development",
            "community",
            "announcements",
            "partnerships",
            "other"
          ]
        },
        "poster": {
          "type": "string",
          "format": "uri",
          "description": "Category-specific poster URL"
        },
        "content": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/contentItem"
          }
        }
      }
    },
    "contentItem": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "text": {
          "type": "string",
          "description": "Markdown-formatted content"
        },
        "sources": {
          "$ref": "#/definitions/scalarOrArray",
          "description": "Source URL(s) - scalar for one, array for multiple"
        },
        "images": {
          "$ref": "#/definitions/scalarOrArray",
          "description": "Image URL(s) - scalar for one, array for multiple"
        },
        "videos": {
          "$ref": "#/definitions/scalarOrArray",
          "description": "Video URL(s) - scalar for one, array for multiple"
        },
        "memes": {
          "oneOf": [
            { "$ref": "#/definitions/meme" },
            { "type": "array", "items": { "$ref": "#/definitions/meme" } }
          ],
          "description": "Generated meme(s) - scalar for one, array for multiple"
        },
        "posters": {
          "$ref": "#/definitions/scalarOrArray",
          "description": "Generated poster URL(s) - scalar for one, array for multiple"
        }
      },
      "additionalProperties": false
    },
    "scalarOrArray": {
      "oneOf": [
        { "type": "string", "format": "uri" },
        { "type": "array", "items": { "type": "string", "format": "uri" } }
      ]
    },
    "meme": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Meme image URL"
        },
        "summary": {
          "type": "string",
          "description": "Brief description of the meme"
        },
        "template": {
          "type": "string",
          "description": "Imgflip template name used"
        }
      }
    }
  }
}
